{
    "name": "serhii/short-number",
    "description": "Light package that shortens given number by taking digits and adding K, M, B or T after them",
    "homepage": "https://github.com/SerhiiCho/short-number",
    "keywords": ["format number", "shorten number", "library"],
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "symfony/var-dumper": "^5.1@dev"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "SerhiiCho",
            "email": "serhiicho@protonmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Serhii\\ShortNumber\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "require": {
        "php": "^7.3"
    }
}
